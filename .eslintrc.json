{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "standard",
        "plugin:@typescript-eslint/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "rules": {
        "indent": ["error", 4],
        "space-before-function-paren": ["error", { "anonymous": "always", "named": "never" }],
        "semi": ["error", "always"]
    },
    "plugins": [
        "@typescript-eslint"
    ]
}

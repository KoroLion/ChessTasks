textColor1 = #F5F5F5
textColor2 = #CCC
textColor3 = #888

clError = #FA3232
clPrimary = green
// clHighlight = #FFA500
clHighlight = orange

body
    background-color #F5F5F5

h1
    text-align center
#app
    font-family Arial
    width 640px
    margin 10px auto
    .btn
        margin-bottom 10px
#board
    width 640px

.btn
    -webkit-appearance none
    display block
    text-align center
    background-color clPrimary
    color textColor1
    border-width 0
    font-size 1.1rem
    padding 10px
    border-radius 3px
    cursor pointer
    transition all 0.3s ease
.btn.btn-danger
    background-color clError
.btn:hover
    background-color clHighlight
